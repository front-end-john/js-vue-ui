@import "./color.styl"
.grey
  color $grey-color
.red
  color $red-color
.yellow
  color $yellow-color
.fail
  color $fail-color
.link
  color $link-color
.touch-color
  background-color #b9c2d1 !important
body{/* IOS禁止微信调整字体大小 */
  -webkit-text-size-adjust: 100% !important;
  text-size-adjust: 100% !important;
  -moz-text-size-adjust: 100% !important;
}

::-webkit-input-placeholder { /* WebKit browsers */
  color: $grey-color;
  font-weight: normal;
}

::-moz-placeholder { /* Mozilla Firefox 19+ */
  color: $grey-color;
  font-weight: normal;
}

:-ms-input-placeholder { /* Internet Explorer 10+ */
  color: $grey-color;
  font-size: 16px;
  font-weight: normal;
}
.ui-box
  display flex
  align-items center
  & > .ui-i1
    flex 1 1 0%
.hidden
  visibility hidden
.ui-box-space
  display flex
  align-items center
  align-content space-around
  & > .ui-i1
    flex 1
button, input, textarea
  border none
  width 100%
  outline 0
span
  display inline-block
.btn
  font-size 18px
  text-align center
  width 100%
  display block
  background $base-color
  border 1px solid $base-color
  color $font-color
  line-height 50px
  border-radius 8px
  &.btn-default
    background #fff
    color $grey-color
    border 1px solid $border-color
.btn[disabled="disabled"]
  color #fff
  background #c0c0c0
  border 1px solid #c0c0c0
.btn-yellow
  background $yellow-color
  color #fff
  font-weight bold
  font-size 16px
  height 40px
  border-radius 4px
.ui-arrow
  padding-right 16px
  position relative
  &:after
    content ''
    width 7px
    height 7px
    display block
    position absolute
    top 50%
    right 2px
    margin-top -4px
    border-top 1px solid $color-grey
    border-right 1px solid $color-grey
    transform rotate(45deg)
.img-box
  position relative
  & > img
    width 100%
    display block
h1
  font-size 18px
h2
  font-size 16px
h3
  font-size 14px
h4
  font-size 12px

.fbt-item
  background #fff
  padding 0 20px
  & > ul
    font-size 14px
    & > li
      padding 15px 0
      & > label
        width 75px
        display inline-block
.checkbox-inner
  position relative
  width 14px
  height 14px
  border 1px solid $border-color
  background #fff
  border-radius 2px
  &:after
    border 2px solid transparent
    border-left 0
    border-top 0
    content ' '
    left 3px
    top 50%
    margin-top -6px
    position absolute
    width 4px
    height 8px
    transform rotate(45deg) scale(0)
    transition transform .2s
  &.on
    background $base-color
    &:after
      border-color #fff
      transform rotate(45deg) scale(1)
.text-area
  border-radius 4px
  background rgb(239,240,241)
  border 0
  margin-top 10px
  padding 10px
  font-size 14px
  &[disabled]
    opacity 1
    color $font-color
    background $bg-color
.ui-item
  background #fff
  border-radius 10px
a{
  color $font-color
}
.close {
  width: 20px;
  height: 20px;
  display: block;
  position: relative;
}

.close:before, .close:after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  width: 14px;
  margin-left: -7px;
  height: 1px;
  background-color: #888;
  -webkit-transform: rotate(45deg);
  transform: rotate(45deg);
}

.close:after {
  -webkit-transform: rotate(-45deg);
  transform: rotate(-45deg);
}
.width-nowrap
  white-space nowrap  // 不换行
